<select
    id="theme-select"
    class="hover:bg-muted/20 cursor-pointer rounded-lg bg-card p-2 transition-colors"
    aria-label="Select theme">
    <option value="system">System</option>
    <option value="light">Light</option>
    <option value="dark">Dark</option>
</select>

<script>
    import { initTheme, setTheme } from "@/utils/theme";

    // Initialize theme when the script loads
    initTheme();

    // Setup select change handler
    const select = document.getElementById("theme-select") as HTMLSelectElement;
    if (select) {
        // Set initial value
        select.value = localStorage.getItem("theme") || "system";

        // Handle changes
        select.addEventListener("change", (e) => {
            const newTheme = (e.target as HTMLSelectElement).value;
            console.log(newTheme);
            setTheme(newTheme);
        });
    }
</script>
