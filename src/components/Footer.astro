---
import ThemePicker from "@/components/ThemePicker/ThemePicker.astro";
import packageJson from "@/../package.json";
const currentYear = new Date().getFullYear();
const version = packageJson.version;
---

<footer class="bg-card-background p-2">
    <div class="container mx-auto flex flex-col items-center gap-4 md:flex-row md:justify-between">
        <ThemePicker />
        <div class="flex flex-col items-center gap-1 md:flex-row md:gap-4">
            <p class="text-xs text-secondary-text opacity-30">v{version} {Date.now()}</p>
            <p class="text-xs text-secondary-text">
                Copyright &copy; {currentYear} Habibur Rahman. All rights reserved.
            </p>
        </div>
    </div>
</footer>
